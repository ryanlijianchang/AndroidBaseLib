<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#444444">

    <include
        android:id="@+id/toolbar_simple_scroll"
        layout="@layout/toolbar_common" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_simple_scroll_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar_simple_scroll"
        android:visibility="gone">


        <com.ryan.baselib.widget.SimpleScrollTextView
            android:id="@+id/tv_simple_scroll_panel_1"
            android:layout_width="310dp"
            android:layout_height="28dp"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="100dp"
            android:background="@drawable/bg_simple_scroll_panel"
            android:gravity="center_vertical"
            android:paddingEnd="0dp"
            android:paddingLeft="5dp"
            android:paddingRight="0dp"
            android:paddingStart="5dp"
            android:singleLine="true"
            android:textColor="#ffffff"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.ryan.baselib.widget.SimpleScrollTextView
            android:id="@+id/tv_simple_scroll_panel_2"
            android:layout_width="310dp"
            android:layout_height="28dp"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="200dp"
            android:background="@drawable/bg_simple_scroll_panel"
            android:gravity="center_vertical"
            android:paddingEnd="0dp"
            android:paddingLeft="5dp"
            android:paddingRight="0dp"
            android:paddingStart="5dp"
            android:singleLine="true"
            android:textColor="#ffffff"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.ryan.baselib.widget.SimpleScrollTextView
            android:id="@+id/tv_simple_scroll_panel_3"
            android:layout_width="310dp"
            android:layout_height="28dp"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="420dp"
            android:background="@drawable/bg_simple_scroll_panel"
            android:gravity="center_vertical"
            android:paddingEnd="0dp"
            android:paddingLeft="5dp"
            android:paddingRight="0dp"
            android:paddingStart="5dp"
            android:singleLine="true"
            android:textColor="#ffffff"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_simple_scroll_light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_light"
            android:contentDescription="@string/empty"
            app:layout_constraintBottom_toBottomOf="@id/tv_simple_scroll_panel_3"
            app:layout_constraintLeft_toLeftOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/dp10"
        app:cardCornerRadius="@dimen/dp8"
        app:cardElevation="@dimen/dp20">

        <Button
            android:id="@+id/btn_simple_scroll_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#009688"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:gravity="center"
            android:paddingBottom="@dimen/dp5"
            android:paddingTop="@dimen/dp5"
            android:text="@string/str_start"
            android:textAllCaps="false"
            android:textColor="#e0f7fa"
            android:textSize="@dimen/sp13" />

    </androidx.cardview.widget.CardView>
</RelativeLayout>